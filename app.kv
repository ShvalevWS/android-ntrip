#: kivy 1.9
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import bluetooth plyer.bluetooth

ScreenManager:
    id: screen_manager
    transition: FadeTransition()
    BluetoothScreen:
        id: bluetooth_screen
        name: 'BluetoothScreen'
        manager: 'screen_manager'
    NtripScreen:
        id: ntrip_screen
        name: 'NtripScreen'
        manager: 'screen_manager'

<NtripScreen>:
    orientation: "vertical"
    size_hint: (0.95, 0.95)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    GridLayout:
        cols: 2
        rows: 7
        Label:
            font_size: "30sp"
            text: root.mount_label
        TextInput:
            id: Mount_inp
            multiline: False

        Label:
            font_size: "30sp"
            text: root.server_label
        TextInput:
            id: Serv_inp
            multiline: False

        Label:
            font_size: "30sp"
            text: root.port_label
        TextInput:
            id: Port_inp
            multiline: False

        Label:
            font_size: "30sp"
            text: root.login_label
        TextInput:
            id: Login_inp
            multiline: False

        Label:
            font_size: "30sp"
            text: root.pass_label
        TextInput:
            id: Pass_inp
            multiline: False

        Button:
            text: "Start"
            bold: True
            background_color: '#00FFCE'
            on_release: root.send_nmea()
        Button:
            text: "Stop"
            bold: True
            background_color: '#00FFCE'
            on_release: root.stop()
        Label:
            font_size: "30sp"
            text: root.resp_label
        Label:
            font_size: "15sp"
            multiline: True
            text_size: self.width*0.98, None
            size_hint_x: 1.0
            size_hint_y: None
            height: self.texture_size[1] + 15
            text: root.resp_body
<BluetoothScreen>:
    orientation: "vertical"
    size_hint: (0.95, 0.95)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    ScrollView:
        cols: 1
        pading: 10
        spacing: 10
        width: 500
        GridLayout:
            cols: 2
            rows: 1
            Button:
                text: "GET DEVICES"
                bold: True
                background_color: '#00FFCE'
                on_release: root.send('hello world')
            Button:
                text: "SCREEN2"
                bold: True
                background_color: '#00FFCE'
                on_release: app.root.current = 'NtripScreen'